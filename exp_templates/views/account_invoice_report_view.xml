<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_invoice_document">
        <t t-if="not o" t-set="o" t-value="doc"/>
        <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
             t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            <t t-set="address">
                <address t-field="o.partner_id"
                         t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                <div class="mt16">
                    <span class="mr-5">Invoice Date:</span>
                    <span t-if="o.invoice_date" t-esc="o.invoice_date.strftime('%d.%m.%Y')"/>
                </div>
            </t>
            <div class="page">
                <style>
                    th {
                        text-transform: uppercase;
                        color: grey;
                    }
                    .invoice_tbody td {
                        padding: 0px;
                        margin: 0px;
                    }
                    .table_info td,tr {
                        padding: 0px;
                        margin:0px;
                    }
                    .tr_subtotal {
                        border-top: 1px solid gray;
                    }
                    .tr_subtotal td {
                        padding-top:0px;
                        text-align: right;
                    }
                </style>
                <h2 class="text-right font-weight-bold text-secondary mt-0">
                    <span t-if="o.type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                    <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                    <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                    <span t-if="o.type == 'out_refund'">Credit Note</span>
                    <span t-if="o.type == 'in_refund'">Vendor Credit Note</span>
                    <span t-if="o.type == 'in_invoice'">Vendor Bill</span>
<!--                    <span t-if="o.name != '/'" t-field="o.name"/>-->
                </h2>
                <hr style="width:75%;border:1px solid gray;" class="font-weight-bold float-right mt-0"/>
                <t t-set="colclass" t-value="('col-md-5' if report_type == 'html' else 'col-5') + ' ml-auto'"/>
                <t t-if="address">
                    <div class="address row">
                        <t t-if="information_block">
                            <t t-set="colclass" t-value="'col-5 offset-1'"/>
                            <div name="information_block" class="col-6">
                                <t t-raw="information_block"/>
                            </div>
                        </t>
                        <div name="address" t-att-class="colclass">
                            <t t-raw="address"/>
                        </div>
                    </div>
                    <hr style="width:75%; border:1px solid gray" class="float-right"/>
                </t>

                <t t-set="colclass" t-value="('col-md-8' if report_type == 'html' else 'col-8') + ' m-auto'"/>
                <div class="row">
                    <div t-att-class="colclass">
                        <table class="table table-borderless table_info">
                            <tr class="font-weight-bold">
                                <td width="33%">Invoice Number:</td>
                                <td><span t-field="o.name"/></td>
                            </tr>
                            <tr>
                                <td>Date due:</td>
                                <td class="font-weight-bold"><span t-if="o.invoice_date_due" t-esc="o.invoice_date_due.strftime('%d.%m.%Y')"/></td>
                            </tr>
                            <tr>
                                <td>VAT Number:</td>
                                <td><span t-field="o.partner_id.vat"/></td>
                            </tr>
                            <tr>
                                <td>Your reference:</td>
                                <td><span t-field="o.invoice_payment_ref"/></td>
                            </tr>
                        </table>
                    </div>
                </div>

                <div class="font-italic">
                    <hr style="border: 2px solid black" class="mb-1"/>
                    <span class="mr-5">Our Reference:</span>
                    <span t-field="o.ref"/>
                    <hr style="border: 2px solid black" class="mt-1"/>
                </div>

                <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                <table class="table table-sm table-borderless" name="invoice_line_table">
                    <thead style="border-bottom: 1px solid #ccc;">
                        <tr>
                            <t t-set="colspan" t-value="6"/>
                            <th name="th_description" class="text-left">
                                <span>Description</span>
                            </th>
                            <th name="th_source" class="d-none text-left">
                                <span>Source Document</span>
                            </th>
                            <th name="th_priceunit"
                                t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span>Unit Price</span>
                            </th>
                            <th name="th_quantity" class="text-right">
                                <span>Qty</span>
                            </th>
                            <th name="th_price_unit" t-if="display_discount"
                                t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span>Discount</span>
                                <t t-set="colspan" t-value="colspan+1"/>
                            </th>
                            <th name="th_subtotal" class="text-right">
                                <span groups="account.group_show_line_subtotals_tax_excluded">Price</span>
                                <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal" t-value="0"/>

                        <t t-foreach="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"
                           t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                               groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                               groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                    <td name="account_invoice_line_name" width="60%">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                    <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="'%.2f'% line.quantity"/>
                                        <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                    </td>
                                    <td t-if="display_discount"
                                        t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span t-field="line.discount"/>%
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span t-field="line.price_subtotal"
                                              groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <span t-field="line.price_total"
                                              groups="account.group_show_line_subtotals_tax_included"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                </t>
                            </tr>

                            <t t-if="current_section and (line_last or o.invoice_line_ids[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td colspan="99">
                                        <strong class="mr16">Subtotal</strong>
                                        <span t-esc="current_subtotal"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <div class="clearfix">
                    <div id="total" class="row w-75 float-right mt-1">
                        <table class="table table-borderless" style="page-break-inside: avoid;">
                            <tr class="tr_subtotal">
                                <td>VAT %</td>
                                <td>Total Excl. VAT</td>
                                <td>VAT Amount</td>
                                <td>Total Incl. VAT</td>
                            </tr>
                            <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                <tr class="tr_subtotal">
<!--                                    <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) == 1 and o.amount_untaxed == amount_by_group[2]">-->
                                        <td>
                                            <span t-esc="amount_by_group[0]"/>
                                        </td>
                                        <td>
                                            <span t-esc="amount_by_group[4]"/>
                                        </td>
                                        <td class="o_price_total">
                                            <span t-esc="amount_by_group[3]"/>
                                        </td>
                                        <td>
                                            <span t-esc="float(amount_by_group[1]) + float(amount_by_group[2])"
                                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                </tr>
                            </t>
                            <tr class="tr_subtotal">
                                <td/>
                                <td><span t-esc="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                <td><span t-esc="float(o.amount_total) - float(o.amount_untaxed)" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/> </td>
                                <td><span t-esc="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                            </tr>
                        </table>
                    </div>
                </div>

                <t t-set="colclass" t-value="('col-md-8' if report_type == 'html' else 'col-8') + ' m-auto'"/>
                    <div class="row" style="font-size:14px;page-break-inside: avoid">
                        <div t-att-class="colclass">
                            <p t-if="o.narration" name="comment">
                                <span t-field="o.narration"/>
                            </p>
                            <p t-if="o.fiscal_position_id.note" name="note">
                                <span t-field="o.fiscal_position_id.note"/>
                            </p>
                            <div id="qrcode"
                                 t-if="(o.company_id.qr_code) and (o.currency_id.name == 'EUR') and (o.invoice_partner_bank_id.acc_number != False)">
                                <p t-if="(o.invoice_partner_bank_id.qr_code_valid)">
                                    <strong class="text-center">Scan me with your banking app.</strong>
                                    <br/>
                                    <br/>
                                    <img class="border border-dark rounded"
                                         t-att-src="o.invoice_partner_bank_id.build_qr_code_url(o.amount_residual,(o.ref) if (o.ref) else o.name)"/>
                                </p>
                                <p t-if="(o.invoice_partner_bank_id.qr_code_valid == False)">
                                    <strong class="text-center">The SEPA QR Code informations are not set correctly.
                                    </strong>
                                    <br/>
                                </p>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </template>

    <template id="report_invoice">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang"
                   t-value="o.invoice_user_id.sudo().lang if o.type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                <t t-call="exp_templates.report_invoice_document" t-lang="lang"/>
            </t>
        </t>
    </template>
</odoo>